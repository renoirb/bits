# EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{html,js,json,scss,yaml,yml}]
insert_final_newline = false

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
insert_final_newline = false
